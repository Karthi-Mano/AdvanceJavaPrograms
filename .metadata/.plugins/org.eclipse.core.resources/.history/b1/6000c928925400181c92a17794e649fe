package com.niit;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.Statement;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * Servlet implementation class skillsetrequestaction
 */
@WebServlet("/skillsetrequestaction")
public class skillsetrequestaction extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException 
	{
		response.setContentType("text/html");
		PrintWriter out=response.getWriter();
		try
		{
			int empid=Integer.parseInt(request.getParameter("empid"));
			String str="select empname,email,qualification from skillsetapply where empid='"+empid+"'";
			Class.forName("org.h2.Driver");
	         Connection conn=DriverManager.getConnection("jdbc:h2:tcp://localhost/~/CEBProject","sa","");
	         Statement stm=conn.createStatement();
	         ResultSet rs=stm.executeQuery(str);
	         rs.next();
	         
	         
	         
			
			
			
			
	    }
	  catch(Exception t)
	  {
		  System.out.println(t);
	  }
	}

}
